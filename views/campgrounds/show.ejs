<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Campground Details</p>
                <div class="list-group">
                    <li class="list-group-item"><strong>Price:</strong> <span class="pull-right">$<%= campground.price %></span></li>
                    <li class="list-group-item"><strong>Capacity:</strong> <span class="pull-right"><%= campground.capacity %></span></li>
                    <li class="list-group-item"><strong>Instructors:</strong> <span class="pull-right"><%= campground.instructors %></span></li>
                    <li class="list-group-item"><strong>Phone:</strong> <span class="pull-right"><%= campground.phone %></span></li>
                    <li class="list-group-item"><strong>Website:</strong> <span class="pull-right"><%= campground.website %></span></li>
                    <li class="list-group-item"><strong>Activities:</strong> <span><%= campground.activities %></span></li>
                </div>
                <p><a href="/campgrounds"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back to Campgrounds</a></p>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" alt="">
                    <div class="caption">
                        <h2><%= campground.name %></h2>
                        <p><%= campground.desc %></p>
                        <p><em>Submitted by <%= campground.createdBy %></em></p>
                        <% if (currentUser != null) {%>
                            <% if (campground.createdBy === currentUser.username) { %>
                                <hr>
                                <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning">Edit</a>
                                <a href="/campgrounds/<%= campground._id %>/delete" class="btn btn-danger">Delete Campground</a>
                            <% } %>
                        <% } %>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-primary">Add a Comment</a>
                    </div>
                    <% if (campground.comments.length > 0) { %>
                        <hr>
                        <% campground.comments.forEach(function(comment) { %>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong><%= comment.name %></strong>
                                    <span class="pull-right">10 days ago</span>
                                    <p><%= comment.comment %></p>
                                    <% if (currentUser != null) { %>
                                        <% if (comment.name === currentUser.username) { %>
                                            <hr>
                                            <a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit" class="btn text-warning">Edit</a>
                                            <a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/delete" class="btn text-danger">Delete</a>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

<% include ../partials/footer %>
