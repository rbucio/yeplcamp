<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1>Edit <%= campground.name %></h1>
                <form action="/campgrounds/<%= campground._id %>" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" class="form-control" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <label>Location</label>
                        <input type="text" name="location" class="form-control" value="<%= campground.location %>">
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="text" name="image" class="form-control" value="<%= campground.image %>">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea type="text" name="description" class="form-control"><%= campground.desc %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Campground</button>
                </form>
                <br>
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
    </div>

<% include ../partials/footer %>
