<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <a href="/campgrounds/<%= campground._id %>">Go to <%= campground.name %> details page</a>
                <h1>Edit <%= campground.name %></h1>
                <form action="/campgrounds/<%= campground._id %>/info" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" class="form-control" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="text" name="image" class="form-control" value="<%= campground.image %>">
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input type="text" name="price" class="form-control" value="<%= campground.price %>">
                    </div>
                    <div class="form-group">
                        <label>Activities</label>
                        <input type="text" name="activities" class="form-control" value="<%= campground.activities %>">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" name="phone" class="form-control" value="<%= campground.phone %>">
                    </div>
                    <div class="form-group">
                        <label>Website</label>
                        <input type="text" name="website" class="form-control" value="<%= campground.website %>">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea type="text" name="description" class="form-control"><%= campground.desc %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Information</button>
                </form>
                <br>
                <br>
                <h1>Edit <%= campground.name %> location</h1>
                <form action="/campgrounds/<%= campground._id %>/location" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="location" value="<%= campground.location %>">
                    </div>
                    <button type="sumbit" class="btn btn-primary">Update Location</button>
                </form>
            </div>
        </div>
    </div>

<% include ../partials/footer %>
