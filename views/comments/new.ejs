<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Add a Comment to <%= campground.name %></h1>

            <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                <div class="form-group">
                    <label>Let us know your Opinion</label>
                    <textarea type="text" name="comment" class="form-control" placeholder="Add your comment here"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Comment</button>
            </form>
            <br>
            <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
